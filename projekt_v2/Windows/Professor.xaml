<Window x:Class="projekt_v2.Windows.Professor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:projekt_v2.Windows"
        mc:Ignorable="d"
        Title="Professor" Height="350" Width="525">
    <Grid Background="#FF2D306B">
        <Button x:Name="btAddQuiz" Content="Create Quiz" HorizontalAlignment="Left" Margin="37,147,0,0" VerticalAlignment="Top" Width="134" Height="91" Click="btAddQuiz_Click" FontWeight="Bold" Background="White" BorderBrush="White"/>
        <Button x:Name="btEditQuiz" Content="Edit Quiz" HorizontalAlignment="Left" Margin="196,147,0,0" VerticalAlignment="Top" Width="134" Height="93" Click="btEditQuiz_Click" BorderBrush="White" Background="White" FontWeight="Bold"/>
        <Label Content="Welcome Professor !" HorizontalAlignment="Left" Margin="139,29,0,0" VerticalAlignment="Top" FontWeight="Bold" Foreground="#FFF1EBEB" FontSize="24"/>
        <Button x:Name="btnAdmin" Content="Register" HorizontalAlignment="Left" Margin="350,145,0,0" VerticalAlignment="Top" Width="134" Height="93" BorderBrush="White" Background="White" FontWeight="Bold" Click="btnAdmin_Click"/>

    </Grid>
</Window>
